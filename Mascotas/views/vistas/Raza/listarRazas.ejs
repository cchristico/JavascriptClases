<h1>Lista de razas</h1>

<div class="row">
  <div class="col-sm-9">
    <p>Listado de las razas :D </p>
  </div>
  <div class="col-sm-3">
    <a href="/CrearRaza" class="btn btn-block btn-success">
      Crear Raza
    </a>
  </div>
</div>

<div class="row">
  <%for(var i=0; i<razas.length; i++) {%>

  <div class="col-sm-4">
    <div class="text-center ma-borde ma-padding-top-bottom">
      <h1> <%= razas[i].nombre %></h1>
      <div class="text-center ma-borde" style="margin-top: 40px;">
        <p>
          <%= razas[i].nombre %>
          <br>
          <%= razas[i].fechaAparicion %>
        </p>
        <p>
          <%= razas[i].continenteOrigen %>
        </p>
      </div>
    </div>

    <div class="col-sm-4">
      <a href="/Raza/BorrarRaza?id=<%= razas[i].id %>" class="btn btn-danger btn-block">Borrar</a>

    </div>
    <div class="col-sm-4">
      <a href="/EditarRaza?id=<%= razas[i].id %>" class="btn btn-primary btn-block">Editar</a>
    </div>
    <div class="col-sm-4">
    </div>
  </div>


  <% }%>
</div>
